 # theme : required - string in [default, error, information, link, primary, secondary, success, warning]
 # size : required - string in [extraSmall, small, medium, default, large, expanded]
 # state : required - string in [default, active, disabled]
 # border : required - string in [default, round, radius]
 # group : required - string in [default, stack, stackForSmall, vertical]
 # framework: required - string in [bootstrap, foundation]
 # list: required - string in [{link: '#1', label: 'link 1'}, {link: '#2', label: 'link 2'}, {link: '#3', label: 'link 3'}]
 # attributes: optional - object, example: {role: 'test', 'data-target': 'body'}

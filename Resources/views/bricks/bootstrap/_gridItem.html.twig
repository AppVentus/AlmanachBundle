{% set almanach = attribute(almanach, framework) %}
{% set class = class is defined ? class : [] %}
{% set attr = attr is defined ? attr : {} %}
{% set tag = tag|default('div') %}

{% for key, value in classGridItem %}
    {% set class = class|merge([
        attribute(almanach.gridItem.classGridItem, key ~ value)
    ]) %}
{% endfor %}

<{{ tag }}
    {% include 'AlmanachBundle:bricks/global:attributes.html.twig' with {
        class: class,
        attr: attr
    } only %}
>
    {% block contentGridItem %}
        {{ contentGridItem|raw }}
    {% endblock %}
</{{ tag }}>

{% set almanach = attribute(almanach, framework) %}
{% set class = class is defined ? class : [] %}
{% set link = link is defined ? link : '#' %}

{% set class = class|merge([
    attribute(almanach.tabTitle.state, state is defined ? state : 'default')
]) %}

{{ almanach_listItem(
    almanach_button(
        content,
        {
            attr : {
                'aria-controls': control,
                'role': 'tab',
                'data-toggle': 'tab',
            },
            tag: 'a',
            link: '#' ~ control
        }
    ),
    {
        attr: {
            role: 'presentation',
        }
    })
}}

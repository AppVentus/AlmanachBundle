{% set almanach = attribute(almanach, framework) %}
{% set class = class is defined ? class : [] %}
{% set attr = attr is defined ? attr : {} %}

{% set class = class|merge([
    'tab-pane',
    attribute(almanach.tabContent.state, state is defined ? state : 'default')
]) %}

{% set attr = id is defined ? attr|merge({id: id}) %}

{% set attr = attr|merge({
    role: 'tabpanel',
    id: id
}) %}

{{ almanach_alignmentText(content, framework, {attr: attr}) }}

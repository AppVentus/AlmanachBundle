<h3><b>Labels</b></h3>
<h4>- Use</h4>
<ul>
    <li>
        <b>with twig extension:</b>
        {% spaceless %}
            <pre>
                {{- "{{ alamanach_label($content, $framework, $theme = 'default', $border = 'default', $class = [], $attr = [], $tag = null, $link = null) }}"|e -}}
            </pre>
        {% endspaceless %}
    </li>
    <li>
        <b>with twig embed:</b>
        {% spaceless %}
            <pre>
                {{- "{% embed 'AlmanachBundle:bricks/' ~ framework ~ ':_label.html.twig' with {content: content, framework: framework, ... } only %}
    {% block content %}
        {# content #}
    {% endblock %}
{% endembed %}"|e -}}
            </pre>
        {% endspaceless %}
    </li>
</ul>
<br><h4>- parameters:</h4>
<ul>
    <li>
        <b>content</b>: content of your label.
    </li>
    <li>
        <b>framework</b>: framework you are using.
        <ul>
            <li>bootstrap</li>
            <li>foundation</li>
        </ul>
    </li>
    <li>
        <b>theme</b>: theme of your label.
        <ul>
            <li>default</li>
            <li>error</li>
            <li>information</li>
            <li>link</li>
            <li>primary</li>
            <li>secondary</li>
            <li>success</li>
            <li>warning</li>
        </ul>
    </li>
    <li>
        <b>border</b>: border of your label.
        <ul>
            <li>default</li>
            <li>round</li>
            <li>radius</li>
        </ul>
    </li>
</ul>
<h4>- example</h4>
<ul style="list-style-type: none">
    <li>
        {% spaceless %}
            <pre>
                {{- "{{ almanach_label('Your 'error' and 'radius' label !', framework, 'error', 'default') }}"|e -}}
            </pre>
        {% endspaceless %}
    </li>
    <li>
        {{ almanach_label('Your "error" and "radius" label !', framework, {
            theme: 'error',
            border: 'default',
        }) }}
    </li>
    <hr>
    <li>
        {% spaceless %}
            <pre>
                {{- "{% embed 'AlmanachBundle:bricks/' ~ framework ~ ':_label.html.twig' with {framework: framework, theme: 'success', border: 'radius' } only %}
    {% block content %}
        Your 'success' and 'radius' label !
    {% endblock %}
{% endembed %}"|e -}}
            </pre>
        {% endspaceless %}
    </li>
    <li>
        {% embed 'AlmanachBundle:bricks/' ~ framework ~ ':_label.html.twig' with {framework: framework, theme: 'success', border: 'radius' } only %}
            {% block contentLabel %}
                Your "success" and "radius" label !
            {% endblock %}
        {% endembed %}
    </li>
    <hr>
    <li>
        {% embed 'AlmanachBundle:bricks/' ~ framework ~ ':_label.html.twig' with {framework: framework, theme: 'warning', border: 'round' } only %}
            {% block contentLabel %}
                Your "warning" and "round" label !
            {% endblock %}
        {% endembed %}
    </li>
</ul>
